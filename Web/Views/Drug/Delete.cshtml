@model Web.ViewModels.DrugViewModel
@{
    ViewBag.Title = "Delete Drug";
}

<div>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Path" class="card-img " width="500"  />
        </div>
        <div class="col-md-4">

            <dl class="dl-horizontal">
                <dt>Tradename</dt>
                <dd>@Model.Tradename</dd>



                <dt>Company</dt>
                <dd>@Model.Company.Name</dd>

            </dl>
        </div>
    </div>
    <dl class="dl-horizontal">
        <dt>Description</dt>
        <dd>@Model.Description</dd>
    </dl>

    <div>
        <form asp-controller="drug" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default btn-danger" value="Удалить" />
            </div>
        </form>
    </div>
</div>