@model Web.ViewModels.DrugViewModel
@{
    ViewBag.Title = "Удаление пользователя";
}

    <div>

                <img src="@Model.UmageUrl" class="card-img " />

                <dl class="dl-horizontal">
                    <dt>Tradename</dt>
                    <dd>@Model.Tradename</dd>

 

                    <dt>Company</dt>
                    <dd>@Model.Company.Name</dd>

                </dl>

        <dl class="dl-horizontal">
            <dt>Description</dt>
            <dd>@Model.Description</dd>

            

        </dl>

        <div>
            <form asp-controller="drug" asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-default btn-danger" value="Удалить" />
                </div>
            </form>
        </div>
    </div>